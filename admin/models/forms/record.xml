<?xml version="1.0" encoding="UTF-8"?>
<form
    addrulepath="/administrator/components/com_siteareas/models/rules"
    addfieldpath="/administrator/components/com_siteareas/models/fields"
>
    <fieldset
        name="main"
        label="COM_SITEAREAS__FIELDSET_MAIN_LABEL"
    >
        <field
            name="id"
            type="hidden"
        />
        <field
            name="name"
            type="text"
            size="30"
            label="COM_SITEAREAS_NAME_LABEL"
            description="COM_SITEAREAS_NAME_DESC"
            filter="string"
            required="true"
            class=""
            labelclass=""
        />
        <field
            name="alias"
            type="text"
            size="30"
            label="COM_SITEAREAS_ALIAS_LABEL"
            description="COM_SITEAREAS_ALIAS_DESC"
            hint="COM_SITEAREAS_ALIAS_HINT"
            filter="string"
            class=""
            labelclass=""
        />
        <field
            name="owner_user_id"
            type="staff"
            label="COM_SITEAREAS_OWNER_LABEL"
            description="COM_SITEAREAS_OWNER_DESC"
            default="COM_SITEAREAS_OWNER_DEFAULT"
            filter="int"
            class="inputbox"
            required="true"
        >
            <option value="">COM_SITEAREAS_OWNER_DEFAULT</option>
        </field>
        <field
            name="admin_group_id"
            type="admingroup"
            label="COM_SITEAREAS_ADMIN_GROUP_LABEL"
            description="COM_SITEAREAS_ADMIN_GROUP_DESC"
        >
            <option value="">COM_SITEAREAS_ADMIN_GROUP_DEFAULT</option>
        </field>
        <field
            name="root_menu_item_id"
            type="rootmenuitem"
            label="COM_SITEAREAS_ROOT_MENU_ITEM_LABEL"
            description="COM_SITEAREAS_ROOT_MENU_ITEM_DESC"
            menu_type="mainmenu"
        >
            <option value="">COM_SITEAREAS_ROOT_MENU_ITEM_DEFAULT</option>
        </field>
        <field
            name="root_catid"
            type="category"
            extension="com_content"
            label="COM_SITEAREAS_CATEGORY_LABEL"
            description="COM_SITEAREAS_CATEGORY_DESC"
        />
        <field name="state" type="list" label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
            filter="intval" size="1" default="1"
        >
            <option value="1">
                JPUBLISHED</option>
            <option value="0">
                JUNPUBLISHED</option>
            <option value="2">
                JARCHIVED</option>
            <option value="-2">
                JTRASHED</option>
        </field>
    </fieldset>
</form>
